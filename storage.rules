rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
        (firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
         firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'super_admin');
    }

    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
        request.resource.size < 5 * 1024 * 1024; // 5MB max
    }

    function isValidDocument() {
      return request.resource.size < 20 * 1024 * 1024; // 20MB max
    }

    // Public assets (logos, hero images, etc.)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Hero section images
    match /hero/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }

    // About section images
    match /about/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }

    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if true;
      allow write: if request.auth.uid == userId && isValidImage();
    }

    // Member documents (CVs, certificates)
    match /members/{memberId}/documents/{fileName} {
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == memberId &&
        (isValidImage() || isValidDocument());
    }

    // Blog post images
    match /blog/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }

    // Project images
    match /projects/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }

    // Team member photos
    match /team/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }

    // Partner logos
    match /partners/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }

    // Resources (PDFs, docs, etc.)
    match /resources/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidDocument();
    }
  }
}
