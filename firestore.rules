rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Users collection
    match /users/{userId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && request.auth.uid == userId;
      allow update: if isOwner(userId) || isAdmin();
      allow delete: if isAdmin();
    }

    // Members collection
    match /members/{memberId} {
      allow read: if true; // Public read for member directory
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(memberId) || isAdmin();
    }

    // Membership applications
    match /membershipApplications/{applicationId} {
      allow read: if isAdmin() ||
        (isAuthenticated() && resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }

    // Membership plans (public read, admin write)
    match /membershipPlans/{planId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Contact form submissions
    match /contactSubmissions/{submissionId} {
      allow read: if isAdmin();
      allow create: if true; // Anyone can submit contact form
      allow update, delete: if isAdmin();
    }

    // Newsletter subscriptions
    match /newsletterSubscriptions/{subscriptionId} {
      allow read: if isAdmin();
      allow create: if true; // Anyone can subscribe
      allow update, delete: if isAdmin();
    }

    // Site content (public read, admin write)
    match /content/{contentId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Blog posts
    match /blogPosts/{postId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Projects
    match /projects/{projectId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Team members
    match /teamMembers/{memberId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Site settings
    match /settings/{settingId} {
      allow read: if true;
      allow write: if isAdmin();
    }
  }
}
