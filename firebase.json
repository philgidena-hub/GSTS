{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "storage": {
    "rules": "storage.rules"
  },
  "functions": {
    "source": "functions",
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "/api/create-checkout-session",
        "function": "createCheckoutSession"
      },
      {
        "source": "/api/verify-payment",
        "function": "verifyPayment"
      },
      {
        "source": "/api/stripe-webhook",
        "function": "stripeWebhook"
      },
      {
        "source": "/api/create-portal-session",
        "function": "createPortalSession"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true,
      "port": 4000
    }
  }
}
