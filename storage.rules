rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isAdmin() {
      return isAuthenticated() &&
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
        request.resource.size < 5 * 1024 * 1024; // 5MB max
    }

    function isValidDocument() {
      return request.resource.contentType.matches('application/pdf') &&
        request.resource.size < 10 * 1024 * 1024; // 10MB max
    }

    // Public assets (logos, hero images, etc.)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // User profile images
    match /users/{userId}/profile/{fileName} {
      allow read: if true;
      allow write: if request.auth.uid == userId && isValidImage();
    }

    // Member documents (CVs, certificates)
    match /members/{memberId}/documents/{fileName} {
      allow read: if isAuthenticated();
      allow write: if request.auth.uid == memberId &&
        (isValidImage() || isValidDocument());
    }

    // Blog post images
    match /blog/{postId}/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }

    // Project images
    match /projects/{projectId}/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }

    // Team member photos
    match /team/{memberId}/{fileName} {
      allow read: if true;
      allow write: if isAdmin() && isValidImage();
    }
  }
}
